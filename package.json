{
  "name": "watermarker",
  "version": "1.0.0",
  "description": "Electron app for bulk watermarking images and videos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.watermarker.app",
    "productName": "Watermarker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!uploads/**",
      "!output/**",
      "!dist/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "electron",
    "watermark",
    "image",
    "video"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "multer": "^2.0.2",
    "sharp": "^0.33.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.7",
    "tailwindcss": "^3.4.14"
  }
}
