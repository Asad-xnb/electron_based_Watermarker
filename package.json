{
  "name": "watermarker",
  "version": "1.0.0",
  "description": "Electron app for bulk watermarking images and videos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "cross-env ELECTRON_BUILDER_DISABLE_CODE_SIGNING=true electron-builder"
  },
  "build": {
    "appId": "com.watermarker.app",
    "productName": "Watermarker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*"
    ],
    "win": {
      "target": [
        "dir",
        "nsis"
      ],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "electron",
    "watermark",
    "image",
    "video"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "archiver-utils": "^5.0.2",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "multer": "^2.0.2",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.7",
    "tailwindcss": "^3.4.14"
  }
}
